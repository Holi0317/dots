{
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "markdown",
    "c",
    "cpp",
    "go"
  ],
  "list.source.lists.defaultOptions": ["--normal"],
  "diagnostic.virtualText": true,
  "diagnostic.infoSign": "",

  "git.addGBlameToBufferVar": true,
  "git.changedDecorator": "⚡",
  "git.stagedDecorator": "",

  // These two root patterns must be in sync
  "project.rootPatterns": [
    ".git",
    ".envrc",
    "pyproject.toml",
    "package.json",
    "CMakeLists.txt"
  ],
  "coc.preferences.rootPatterns": [
    ".git",
    ".envrc",
    "pyproject.toml",
    "package.json",
    "CMakeLists.txt"
  ],

  "cSpell.showStatus": true,

  "emmet.includeLanguages": {
    "jinja.html": "html",
    "vue-html": "html",
    "javascript": "javascriptreact",
    "typescript": "javascriptreact",
    "typescriptreact": "javascriptreact"
  },

  "eslint.codeAction.showDocumentation": { "enable": false },

  "vetur.dev.vlsPath": "/home/holi/.config/yarn/global/node_modules/vue-language-server",
  "vetur.useWorkspaceDependencies": true,

  "prettier.disableLanguages": [],

  // Disable stylelint until stylelint-vscode updates
  "stylelint.enable": false,

  // Disable TS/JS formatting as we are using prettier
  "typescript.format.enabled": false,
  "javascript.format.enabled": false,

  "python.formatting.provider": "black",
  "python.linting.flake8Enabled": true,
  "python.linting.mypyEnabled": false,
  "python.linting.pylintEnabled": false,
  "python.venvPath": "venv",

  "clangd.semanticHighlighting": true,
  "clangd.arguments": ["--clang-tidy"],

  "xml.java.home": "/usr/lib/jvm/default",
  "cSpell.userWords": [
    "Vuetify",
    "Vuex",
    "alacritty",
    "gobuffalo",
    "postgres",
    "postgresql",
    "yeung"
  ],

  "diagnostic-languageserver.filetypes": {
    "go": ["golangci-lint"]
  }
}
